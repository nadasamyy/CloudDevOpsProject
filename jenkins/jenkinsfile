pipeline {
    agent any
    
 environment {
    DOCKER_REGISTRY = 'docker.io'
    DOCKER_IMAGE = 'nadasamy181/demo-app'
}
    
    stages {
        stage('Git Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Unit Test') {
            steps {
                script {
                    // Run your unit tests here (e.g., using Gradle or Maven)
                    sh './gradlew test'  // Example for Gradle
                }
            }
        }

        stage('Build JAR') {
            steps {
                script {
                    // Build your JAR file (e.g., using Gradle or Maven)
                    sh './gradlew build'  // Example for Gradle
                }
            }
        }

        stage('Build Image') {
            steps {
                script {
                    // Build the Docker image using the Dockerfile
                    sh 'docker build -t ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${BUILD_NUMBER} .'
                }
            }
        }

        stage('Push Image into Registry') {
            steps {
                script {
                    // Push the Docker image to the registry
                    sh 'docker login -u nadasamy181 -p $DOCKER_PASSWORD ${DOCKER_REGISTRY}'
                    sh 'docker push ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${BUILD_NUMBER}'
                }
            }
        }
    }
    
    post {
        always {
            // Clean up the Docker environment if needed
            sh 'docker rmi ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${BUILD_NUMBER}'
        }
    }
}
