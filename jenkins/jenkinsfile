pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Unit Test') {
            steps {
                script {
                    // Ensure you are running the correct Gradle task
                    bat './gradlew test' // Use './gradlew' on Windows
                }
            }
        }
        stage('Build JAR') {
            steps {
                script {
                    bat './gradlew build' // Ensure build task is correctly set up
                }
            }
        }
        stage('Post Actions') {
            steps {
                cleanWs()  // Clean workspace
            }
        }
    }
}
